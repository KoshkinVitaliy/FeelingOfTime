<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="436.0" prefWidth="529.0" spacing="20.0" style="-fx-background-color: #070707;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.feelingoftime.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label fx:id="welcomeText" prefHeight="159.0" prefWidth="299.0" style="-fx-wrap-text: true; -fx-alignment: center;" text="Нажмите, чтобы начать" textFill="WHITE" textOverrun="CLIP" underline="true">
      <font>
         <Font size="18.0" />
      </font></Label>
    <Button fx:id="startBtn" onAction="#onHelloButtonClick" prefHeight="46.0" prefWidth="87.0" style="-fx-background-color: #FDCFF3;" text="СТАРТ">
      <font>
         <Font name="System Bold" size="18.0" />
      </font>
      <cursor>
         <Cursor fx:constant="HAND" />
      </cursor></Button>
   <Button fx:id="stopBtn" disable="true" mnemonicParsing="false" onAction="#onStopButtonClick" prefHeight="47.0" prefWidth="90.0" style="-fx-background-color: #FDCFF3;" text="СТОП" visible="false">
      <font>
         <Font name="System Bold" size="18.0" />
      </font>
      <cursor>
         <Cursor fx:constant="HAND" />
      </cursor>
   </Button>
</VBox>
